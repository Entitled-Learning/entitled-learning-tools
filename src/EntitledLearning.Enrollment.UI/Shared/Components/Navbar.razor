<SideDrawer IsOpen="@_drawerIsOpen" ParentChangeHandler="@ToggleDrawer" />


@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }

    private bool _mobileMenuIsOpen = false;
    private bool _drawerIsOpen = false;

    private Dictionary<string, string> _links = new Dictionary<string, string>() {
        { "Home", "/" },
        { "Entitled Learning Store", "https://entitled-learning.myshopify.com/" },
        { "YP Resources", "https://www.entitledlearning.com/young-professionals-tour" },
        { "Our Team", "https://www.entitledlearning.com/village-1" },
        { "Updates", "https://www.entitledlearning.com/updates" },
        { "Contact Us", "https://www.entitledlearning.com/contact-us" },
    };

    private void ToggleDrawer()
    {
        _drawerIsOpen = !_drawerIsOpen;
    }

    private void ToggleMobileMenu()
    {
        _mobileMenuIsOpen = !_mobileMenuIsOpen;
    }
}
