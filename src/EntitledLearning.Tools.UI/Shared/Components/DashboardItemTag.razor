@inherits ComponentBase

<span class="dashboard-tag @TagTypeClass @(Class)">
    @Text
</span>

@code {
    /// <summary>
    /// The text to display in the tag
    /// </summary>
    [Parameter]
    public string Text { get; set; } = "Beta";

    /// <summary>
    /// The type of tag (affects styling)
    /// </summary>
    [Parameter] 
    public TagType Type { get; set; } = TagType.Beta;

    /// <summary>
    /// Additional CSS classes to apply
    /// </summary>
    [Parameter]
    public string Class { get; set; } = string.Empty;

    private string TagTypeClass => $"tag-{Type.ToString().ToLowerInvariant()}";
}
