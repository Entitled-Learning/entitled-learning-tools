        <div class="flex items-center md:order-2">
            <button @onclick="ToggleMenu" data-collapse-toggle="mobile-menu-2" type="button" class="inline-flex items-center p-2 ml-1 text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 dark:text-gray-400" aria-controls="mobile-menu-2" aria-expanded="false">
