            </button>
        </div>
        <div class="items-end justify-between @(showMobileMenu ? "" : "hidden") w-full md:flex md:w-auto md:order-1" id="mobile-menu-2">
            <ul class="flex flex-col font-medium md:flex-row md:space-x-8 md:mt-0">
                @*<li>
                    <NavLink class="@(isCurrentPage("Index") ? "current-page" : "other-pages")" href="" Match="NavLinkMatch.All">
                        Home
                    </NavLink>
                </li>*@
                <li class="@(showMobileMenu ? "" : "hidden")">
                    <NavLink class="@(isCurrentPage("ExploreData") ? "current-page" : "other-pages")" href="explore-data">
                        Explore Data
                    </NavLink>
                </li>
                <li class="@(showMobileMenu ? "" : "hidden")">
                    <NavLink class="@(isCurrentPage("AddData") ? "current-page" : "other-pages")" href="add-data">
                        Add Data
                    </NavLink>
                </li>
                <LoginDisplay />
                <li>
                    <NavLink class="@(isCurrentPage("About") ? "current-page" : "other-pages")" href="about">
                        About
                    </NavLink>
                </li>
                @*<li>
                    <NavLink class="@(isCurrentPage("Products") ? "current-page" : "other-pages")" href="products">
                        Products
                    </NavLink>
                </li>
                <li>
                    <NavLink class="@(isCurrentPage("Machines") ? "current-page" : "other-pages")" href="machines">
                        Machines
                    </NavLink>
                </li>
                <li>
                    <NavLink class="@(isCurrentPage("ContactUs") ? "current-page" : "other-pages")" href="contact-us">
                        Contact Us
                    </NavLink>
                </li>*@
            </ul>
        </div>
    </div>
</nav>


@code {
    private bool showMobileMenu { get; set; } = false;

    [Parameter]
    public Type? PageType { get; set; }

    private void ToggleMenu()
    {
        showMobileMenu = !showMobileMenu;
        return;
    }

    private bool isCurrentPage(string pageName)
    {
        return PageType is not null ? "EntitledLearningTools.Pages." + pageName == PageType!.ToString() : false;
    }
}


