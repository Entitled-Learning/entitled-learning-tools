                        @if (_links.Count > 0)
                        {

                            @foreach (var link in _links)
                            {
                                <a href="@link.Value" target="_blank" class="rounded-md px-3 py-2 text-sm font-medium text-gray-300 hover:bg-gray-700 hover:text-white">@link.Key</a>
                            }
